<apex:page standardController="Resume__c"
    extensions="BYROS_ResumePDFController"
    renderAs="pdf"
    showHeader="false"
    sidebar="false"
    applyBodyTag="false"
    cache="false">

    <!-- Minimal inline “SLDS-like” spacing/typography -->
    <style>
        .wrap { padding: 16px 20px; }
        .title { font-size: 22px; font-weight: 700; text-align: center; margin: 8px 0 12px; }
        .sub { font-size: 14px; text-align: center; margin: 0 0 12px; }
        .hr { border: 0; border-top: 1px solid #ddd; margin: 12px 0; }
        .section { font-size: 14px; margin: 12px 0; }
        .heading { 
            font-weight: bold;        /* bold */
            text-align: center;      /* centered */
            margin: 8px 0;
            font-size: 16px;
        }
        .content { font-size: 12px; margin: 8px 0; }
        .left { text-align: left; }
        .avoid-break { page-break-inside: avoid; }
    </style>


    <div class="wrap">
        <!-- Applicant header (name + contact line) -->
        <div class="title" align="center" 
                style="font-weight: bold; padding-top: 5px; padding-bottom: 5px;">{!applicantName}</div>
        <div class="sub" align="center"
                style="padding-top: 5px; padding-bottom: 5px;">
            {!applicantEmail} | {!applicantMobilePhone} | {!applicantCity}, {!applicantState}
        </div>

        <hr class="hr"/>

        <!-- SUMMARY -->
        <apex:outputPanel rendered="{!NOT(ISBLANK(summary))}" layout="block" styleClass="section avoid-break">
            <div class="heading" align="center" 
                    style="font-weight: bold; padding-top: 5px; padding-bottom: 5px;">SUMMARY</div>
            <div class="content left" style="padding-top: 5px; padding-bottom: 5px;">
                <apex:outputText value="{!summary}" escape="true"/>
            </div>
        </apex:outputPanel>

        <hr class="hr"/>

        <!-- SKILLS & CERTIFICATIONS -->
        <div class="section avoid-break">
            <div class="heading" align="center"
                    style="font-weight: bold; padding-top: 5px; padding-bottom: 5px;">SKILLS AND CERTIFICATIONS</div>

            <div class="content left" style="padding-top: 5px; padding-bottom: 5px;"><b>Skills:</b></div>
            <apex:outputPanel rendered="{!NOT(ISBLANK(skillsString))}" layout="block" styleClass="content left">
                <apex:outputText value="{!skillsString}" escape="true"/>
            </apex:outputPanel>

            <div class="content left" style="padding-top: 5px; padding-bottom: 5px;"><b>Certifications:</b></div>
            <apex:outputPanel rendered="{!NOT(ISBLANK(certificationsString))}" layout="block" styleClass="content left">
                <apex:outputText value="{!certificationsString}" escape="true"/>
            </apex:outputPanel>
        </div>

        <hr class="hr"/>

        <!-- HIGHLIGHTS (rich text) -->
        <apex:outputPanel rendered="{!NOT(ISBLANK(highlightsHtml))}" layout="block" styleClass="section avoid-break">
            <div class="heading" align="center" 
                    style="font-weight: bold; padding-top: 5px; padding-bottom: 5px;">HIGHLIGHTS</div>
            <div class="content left">
                <apex:outputText value="{!highlightsHtml}" escape="false"/>
            </div>
        </apex:outputPanel>

        <hr class="hr"/>

        <!-- WORK EXPERIENCE -->
        <apex:outputPanel rendered="{!NOT(ISBLANK(workExperienceDetails))}" layout="block" styleClass="section">
            <div class="heading" align="center" 
                    style="font-weight: bold; padding-top: 5px; padding-bottom: 5px;">WORK EXPERIENCE</div>
            <div class="content left">
                <apex:repeat value="{!workExperienceDetails}" var="exp">
                    <div class="avoid-break" style="margin-bottom:10px;">
                        <b><apex:outputText value="{!exp.company}"/></b>
                        &nbsp;/&nbsp;<apex:outputText value="{!exp.location}"/><br/>
                        <i><apex:outputText value="{!exp.role}"/></i>
                        &nbsp;/&nbsp;<apex:outputText value="{!exp.fromDate}"/>
                        &nbsp;-&nbsp;<apex:outputText value="{!exp.toDate}"/><br/>
                        <apex:outputText value="{!exp.responsibilities}" escape="false"/>
                    </div>
                </apex:repeat>
            </div>
        </apex:outputPanel>

        <hr class="hr"/>

        <!-- EDUCATION -->
        <apex:outputPanel rendered="{!NOT(ISBLANK(educationDetails))}" layout="block" styleClass="section">
            <div class="heading" align="center"
                    style="font-weight: bold; padding-top: 5px; padding-bottom: 5px;">EDUCATION</div>
            <div class="content left">
                <apex:repeat value="{!educationDetails}" var="ed">
                    <div class="avoid-break" 
                            style="padding-top: 5px; padding-bottom: 5px;">
                        <b><apex:outputText value="{!ed.degreeType}"/></b><br/>
                        <div>
                            <i>School:</i> <apex:outputText value="{!ed.institutionName}"/><br/>
                            <i>Field of Study:</i> <apex:outputText value="{!ed.fieldOfStudy}"/><br/>
                            <i>Completed:</i> <apex:outputText value="{!ed.dateAchieved}"/>
                        </div>
                    </div>
                </apex:repeat>
            </div>
        </apex:outputPanel>

        <hr class="hr"/>

        <!-- COVER LETTER (rich text) -->
        <apex:outputPanel rendered="{!NOT(ISBLANK(coverLetterHtml))}" layout="block" styleClass="section avoid-break">
            <div class="heading" align="center"
                    style="font-weight: bold; padding-top: 5px; padding-bottom: 5px;">COVER LETTER</div>
            <div class="content left">
                <apex:outputText value="{!coverLetterHtml}" escape="false"/>
            </div>
        </apex:outputPanel>

    </div>
</apex:page>